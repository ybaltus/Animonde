{% extends 'base.html.twig' %}

{% block title %}Les animaux - Animonde{% endblock %}

{% block body %}
    <section class="py-5">
    <div class="text-center">
        <h1 class="text-center">Liste complète de nos animaux</h1>
        <img src='assets/images/elephants.jpg' style="width: 300px;" class=' img-fluid ' >
    </div>
      <div class="container px-4 px-lg-5 mt-5">
        <h4 class="text-center">Nos animaux disponibles</h4>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {% for animal in animals %}
            <div class="card m-3 col-md-3">
                <img src="/assets/images/{{ animal.image }}" class="card-img-top img-fluid" style="height: 390px; width: 280px;" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-center">{{ animal.name|upper }} <img src="pokeball.ico"  style="height: 30px;" alt=""></h5>
                    <p class="card-text">animal {{ animal.rarity.name }} très gentil de type {{ animal.type.name}} </p>
                    <a href="/voir-un-animal?id={{ animal.id }}" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
                {% else %}
                Il n'y a pas d'animaux de disponnible.
            {% endfor %}
        </div>
    </div>
    </section>
{% endblock %}